{% extends 'layout.html.twig' %}
{% block stylesheet %}
    <link rel="stylesheet" type="text/css" href="css/libs/nanoscroller.css" />
    <link rel="stylesheet" type="text/css" href="{{asset('css/theme_styles.css')}}" />
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,600,700,300' rel='stylesheet' type='text/css'>
{% endblock %}
{% block admin %}
    <div class="container mb-5">
        <div class="row">
            <div class="col-lg-12">
                <div id="content-header" class="clearfix">
                    <div class="float-left">
                        <ol class="breadcrumb">
                            <li><a href="#">Home</a></li>
                            <li class="active"><span>Tricks</span></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="main-box clearfix">
                    <header class="main-box-header clearfix">
                        <h2 class="float-left">Manage Tricks</h2>
                        <div id="reportrange" class="float-right daterange-filter">
                            <a href="{{ path('app_trick_new') }}" class="btn btn-primary float-right">
                                <i class="fa fa-plus-circle fa-lg"></i> Add Trick
                            </a>
                        </div>
                    </header>
                    <div class="main-box-body clearfix">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th><a href="#"><span>ID</span></a></th>
                                        <th><a href="#" class="desc"><span>NAME</span></a></th>
                                        <th><a href="#" class="desc"><span>DESCRIPTION</span></a></th>
                                        <th><a href="#" class="desc"><span>SLUG</span></a></th>
                                        <th><a href="#" class="desc"><span>CREATEDAT</span></a></th>
										<th><a href="#" class="desc"><span>UPDATEDAT</span></a></th>
                                        <th><a href="#" class="desc"><span>ACTIVE</span></a></th>
                                        <th><a href="#" class="desc"><span>Actions</span></a></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for trick in paginations %}
                                        <tr>
                                            <td>
												{{ trick.id }}
                                            </td>
                                            <td>
                                                {{ trick.name }}
                                            </td>
                                            <td>
                                                {{ trick.description }}
                                            </td>
                                            <td>
                                                {{ trick.slug }}
                                            </td>
											  <td>
                                                {{ trick.createdAt|date('d/m/y') }}
                                            </td>
											  <td>
                                                {{ trick.updatedAt|date('d/m/y') }}
                                            </td>
                                                <td>
                                                    <div class="custom-control custom-switch">
                                                        <input type="checkbox" checked data-toggle="toggle" data-onstyle="primary" data-offstyle="secondary" 
                                                        {% if trick.activated == 0 %} 
                                                        <span class="badge badge-danger" style="float:left;">Inactive</span> 
                                                        {% else %}
                                                        <span class="badge badge-success" style="float:left;">Active</span>
                                                        {% endif %}
                                                    </div>
                                                </td>
                                            <td style="width: 20%;">
                                                <a href="{{path('app_trick_comments',{'id':trick.id})}}" class="table-link primary">
                                                    <span class="fa-stack">
                                                        <i class="fa fa-square fa-stack-2x"></i>
                                                        <i class="fa fa-envelope fa-stack-1x fa-inverse"></i>
                                                    </span>
                                                </a>
                                                <a href="{{path('app_trick_delete',{'id':trick.id})}}" class="table-link danger">
                                                    <span class="fa-stack">
                                                        <i class="fa fa-square fa-stack-2x"></i>
                                                        <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                                                    </span>
                                                </a>
                                                <a href="{{path('app_trick_show',{'id':trick.id})}}" class="table-link success">
                                                    <span class="fa-stack">
                                                        <i class="fa fa-square fa-stack-2x"></i>
                                                        <i class="fa fa-eye fa-stack-1x fa-inverse"></i>
                                                    </span>
                                                </a>
                                            </td>
                                        </tr>
									{%else%}
									    <tr>
											<td colspan="7">
												<div class="alert alert-danger">
													no records found
												</div>
											</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                            <div class="navigation">
                                {{ knp_pagination_render(paginations) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
