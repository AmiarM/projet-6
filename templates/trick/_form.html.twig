<div class="container-fluid">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div id="content-header" class="clearfix">
                    <div class="float-left">
                        <ol class="breadcrumb">
                            <li><a href="#">Home</a></li>
                            <li class="active"><span>Trick</span></li>
                            <li class="active"><span>{{action}}</span></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="main-box">
                    <header class="main-box-header clearfix">
                        <h2>{{action}}</h2>
                    </header>
                    <div class="main-box-body clearfix">
                        {{form_start(form)}}
                            <div class="form-group">
                                {{form_row(form.name)}}
                            </div>
                            <div class="form-group">
                                {{form_row(form.description|slice(1,20))}}
                            </div>
                            <div class="form-group">
                                {{form_row(form.slug)}}
                            </div>
                            <div class="form-group">
                                {{form_row(form.categorie)}}
                            </div>
                            <div class="form-group">
                                {{form_row(form.images)}}
                            </div>
                            {# v√©rifier que la route est app_trick_edit#}
                            {% if app.request.attributes.get('_route') == "app_trick_edit" %}
                            <div class="form-group">
                                {{form_row(form.activated)}}
                            </div>
                            <div class="container">
                                <h2>Images</h2>
                                <hr>
                                <div class="row">
                                    {% for image in trick.images %}
                                    <div class="col-md-3" style="margin-right:5px;">
                                        <img src="{{asset('/uploads/' ~ image.name)}}" class="rounded mx-auto d-block" width="150px; height=150px">
                                        <a href="{{path('app_trick_image_delete',{id:image.id})}}" data-delete data-token="{{csrf_token('delete'~image.id)}}">Delete</a>
                                    </div>
                                    {% endfor %}
                                </div>
                            </div>!
                            {% endif %}
                            <button type="sumbit" class="form-submit btn btn-primary btn-block">{{action}}</button>
                        {{form_end(form)}}
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <img src="{{asset('images/gal2.jpg')}}" alt="" width="600px" height="510px">
            <div>
        </div>
    </div>
</div>