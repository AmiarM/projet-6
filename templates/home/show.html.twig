<!-- Comments Section -->
<section id="comments">
	<div class="container commentaires">
		<div class="row justify-content-md-center">
      {% if app.user  is not defined%}
      <div class="col-md-6 col-lg-12">
				<div id="post-add-comment" class="well">
                     <div class="form-card text-center">
						<a class="btn btn-success btnlogin2" href="{{path('user_login')}}">
							<i class="fa fa-sign-in" aria-hidden="true"></i>&nbsp;Connectez-vous
						</a>
						pour publier un message<br>
					</div>
				</div>
			</div>
      {% endif %}
			<div class="col-sm-8 commentaires2">
				<h3>
				<i class="fa fa-comments" aria-hidden="true"></i> {{trick.comments | length}}
					commentaire</h3>
				<hr>
        {% if trick.comments | length == 0%}
        <div class="post-comment">
					<p>Il n'y a aucun commentaire pour l'instant.</p>
				</div>
        {% else %}
        {% for comment in trick.comments %}
        {% if comment.activated == 1%}
												<div class="d-flex flex-start mt-4" style="margin-left:90px;">
													<a class="me-3" href="#">
														<img class="rounded-circle shadow-1-strong" src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(11).webp" alt="avatar" width="65" height="65"/>
													</a>
													<div class="flex-grow-1 flex-shrink-1">
														<div>
															<div class="d-flex justify-content-between align-items-center">
																<p class="mb-1">
																	{{app.user.firstname}} {{app.user.lastname}}
																	<span class="small">- {{comment.createdAt|date('y/m/d H:i:s')}}</span>
																</p>
															</div>
															<p class="small mb-0">
																{{comment.content}}
															</p>
                              </p>
														</div>
													</div>
												</div>
                        {% endif %}
											{% endfor %}
        {%endif%}
        <br>
        <hr>
        <div class="form-comments" id="reply">
          <div class="title-box-2">
            <h3 class="title-left">
              Leave a Comment
            </h3>
          </div>
          {{form_start(form)}}
            <div class="row">
              <div class="col-md-12 mb-3">
                <div class="form-group">
                  {{form_row(form.content)}}
                </div>
              </div>
              <div class="col-md-12">
                {{form_row(form.submit)}}
              </div>
            </div>
            {{form_end(form)}}
        </div>
			</div>
		</div>
	</div>
</section> 
