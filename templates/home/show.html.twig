{% extends 'base.html.twig' %}
{% block stylesheet %}
  <link type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"> 
{% endblock %}
{% block body %}
<!-- Header -->
<header class="masthead" style="height: 50vh;
  {% for image in trick.images %}
    {% if image is  not defined %}
      <div class="alert alert-danger">
        Aucune Image
      </div>
    {% else %}
      {% if image.isFirst == 1 %}
        background: url({{asset('/uploads/'~image.name)}});background-repeat: no-repeat;background-size: cover;
      {% endif %}
    {% endif %}
  {% endfor %}
">
  <div class="container d-flex h-100 align-items-center">
    <div class="mx-auto text-center">
      <h1 class="text-uppercase mx-auto my-0">truck driver</h1>
    </div>
  </div>
</header>
<!-- Trick Section -->
<section id="tricks" class="projects-section bg-light">
  <div class="container" >
    <div class="row justify-content-md-center">
      <div class="col-md-12 text-center">
        <div class="row justify-content-md-center"></div>
        <div class="row justify-content-md-center" id="media">
          <div class="col-md-6">
            <div class="row">
                {% for image in trick.images %}
                  {% if image  is not defined %}
                  <div class="alert alert-danger">
                    Aucune Images
                  <div>
                  {% else %}
                    {% if image.isFirst == 0 %}
                      <div class="col-md-4 trickimages">
                        <a href="" class="zoombox zgallery1">
                            <img class="img-fluid" src="{{asset('/uploads/' ~ image.name)}}" />
                        </a>
                      </div>
                    {% endif  %}
                  {% endif %}
                {% endfor %}
            </div>
          </div>
          <div class="col-md-6">
            <div class="row"></div>
          </div>
        </div>
        <div class="row seeMedia">
          <div class="mx-auto">
            <button id="seeMedia" class="btn btn-primary">Voir les médias</button>
          </div>
        </div>
        <hr>
        <p>{{trick.description}}</p>
        <hr>
        <p><span class="btn btn-info">Catégorie: {{trick.categorie.name}}</span></p>
        <hr>
        <span class=" justify-content-md-center">
          <span class="btn btn-info"><i class="fa fa-calendar"></i>  publié le {{trick.createdAt | date('d/m/Y à H:i:s')}}</span>
        </span>
        <span class="btn btn-info justify-content-md-center"><i class="fa fa-user"></i> Auteur: {{trick.user.firstname}} {{trick.user.lastname}}</span>
        <hr>
      </div>
    </div>
  </div>
</section>
<!-- Comments Section -->
<section id="comments">
  <div class="container commentaires">
    <div class="row justify-content-md-center">
      {% if app.user  is not defined%}
      <div class="col-md-8 col-sm-12">
        <div id="post-add-comment" class="well">
          <div class="form-card text-center">
            <a class="btn btn-success btnlogin2" href="/connexion">
                <i class="fa fa-sign-in" aria-hidden="true"></i>&nbsp;Connectez-vous
            </a>
            pour publier un message<br>
          </div>
        </div>
      </div>
      {% endif %}
      <div class="col-sm-8 commentaires2">
        <h3>
          <i class="fa fa-comments" aria-hidden="true"></i>{{trick.comments | length}}
            commentaire
        </h3>
        <hr>
        {% if trick.comments | length == 0%}
        <div class="post-comment">
					<p>Il n'y a aucun commentaire pour l'instant.</p>
				</div>
        {% else %}
        {% for comment in trick.comments %}
        <div class="row post-comment">
          <a name="comment_3"></a>
          <h4 class="col-sm-3 commentnotes">
            <img src="{{asset('/uploads/'~comment.user.avatar)}}" class="img-fluid  img-thumbnail avatar" width="50px" height="50px"/>
            <strong>{{comment.user.firstname}} {{comment.user.lastname}}</strong><br/> publié le<br /><strong>{{comment.createdAt| date('d/m/Y à H:i:s')}}</strong>
          </h4>
          <div class="col-sm-9">
           {{comment.content}}
          </div>
        </div>
        {% endfor %}
        {% endif %}
        <br>
        <hr>
        <div class="form-comments" id="reply">
          <div class="title-box-2">
            <h3 class="title-left">
              Leave a Comment  
            </h3>
          </div>
          {{form_start(form)}}
            <div class="row">
              <div class="col-md-12 mb-3">
                <div class="form-group">
                  {{form_row(form.content)}}
                </div>
              </div>
              <div class="col-md-12">
                {{form_row(form.submit)}}
              </div>
            </div>
            {{form_end(form)}}
        </div>
      </div>
    </div>
  </div>
  
</section>
{% endblock %}