{% extends 'layout.html.twig' %}

{% block title %}Register{% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" type="text/css" href="css/libs/nanoscroller.css" />
    <link rel="stylesheet" type="text/css" href="{{asset('css/theme_styles.css')}}" />
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,600,700,300' rel='stylesheet' type='text/css'>
{% endblock %}
{% block admin %}
    <div class="container mb-5">
        <div class="row">
            <div class="col-lg-12">
                <div id="content-header" class="clearfix">
                    <div class="float-left">
                        <ol class="breadcrumb">
                            <li><a href="#">Home</a></li>
                            <li class="active"><span>Comments</span></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="main-box clearfix">
                    <header class="main-box-header clearfix">
                        <h2 class="float-left">Manage Comment</h2>
                    </header>
                    <div class="main-box-body clearfix">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th><a href="#"><span>ID</span></a></th>
                                        <th><a href="#" class="desc"><span>Content</span></a></th>
                                        <th><a href="#" class="desc"><span>TRICK</span></a></th>
                                        <th><a href="#" class="desc"><span>USER</span></a></th>
                                        <th><a href="#" class="desc"><span>CREATEDAT</span></a></th>
                                        <th><a href="#" class="desc"><span>ACTIVATED</span></a></th>
                                        <th><a href="#" class="desc"><span>Actions</span></a></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for comment in app.user.comments %}
                                        <tr>
                                            <td>
                                                {{ comment.id }}
                                            </td>
                                            <td>
                                                {{ comment.content }}
                                            </td>
                                            <td>
                                                {{ comment.trick.name }}
                                            </td>
                                            <td>
                                                {{ comment.user.email }}
                                            </td>
                                            <td>
                                                {{ comment.createdAt|date('d/m/y') }}
                                            </td>
                                            <td>
                                                <div class="custom-control custom-switch">
                                                    <input type="checkbox" checked data-toggle="toggle" data-onstyle="primary" data-offstyle="secondary" 
                                                           {% if comment.activated == 0 %} 
                                                               <span class="badge badge-danger" style="float:left;">Inactive</span> 
                                                    {% else %}
                                                        <span class="badge badge-success" style="float:left;">Active</span>
                                                    {% endif %}
                                                </div>
                                            </td>
                                            <td style="width: 20%;">
                                                <a href="{{path('app_comment_show',{'id':comment.id})}}" class="table-link">
                                                    <span class="fa-stack">
                                                        <i class="fa fa-square fa-stack-2x"></i>
                                                        <i class="fa fa-eye fa-stack-1x fa-inverse"></i>
                                                    </span>
                                                </a>
                                                <a href="{{path('app_comment_delete',{id:comment.id})}}" class="table-link danger">
                                                    <span class="fa-stack">
                                                        <i class="fa fa-square fa-stack-2x"></i>
                                                        <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                                                    </span>
                                                </a>
                                            </td>
                                        </tr>
                                    {%else%}
                                        <tr>
                                            <td colspan="7">
                                                <div class="alert alert-danger">
                                                    no records found
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
