{% extends 'layout.html.twig' %}

{% block title %}My Account{% endblock %}
{% block admin %}
    <div id="theme-wrapper">
        <div class="row">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-12">
                        <ol class="breadcrumb">
                            <li><a href="#">Home</a></li>
                            <li><a href="#">Users</a></li>
                            <li class="active"><span>Change Password</span></li>
                        </ol>
                        <h1>Change Password</h1>
                    </div>
                </div>

                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div id="login-box">
                                <div id="login-box-holder">
                                    <div class="row">
                                        <div class="col-12">
                                            <header id="login-header">
                                                <div id="login-logo">
                                                    <img src="{{asset('images/logo.png')}}" alt="" />
                                                </div>
                                            </header>
                                            <div id="login-box-inner" class="with-heading">
                                                <h4>Change your password?</h4>
                                                {{form_start(form)}}
                                                <div class="input-group reset-pass-input">
                                                    {{form_widget(form.old_password)}}
                                                </div>
                                                <div class="input-group reset-pass-input">
                                                    {{form_widget(form.new_password)}}
                                                </div>
                                                <div class="row">
                                                    <div class="col-12">
                                                        {{form_row(form.submit)}}
                                                    </div>
                                                </div>
                                                {{form_end(form)}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
