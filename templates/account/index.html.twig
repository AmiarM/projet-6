{% extends 'layout.html.twig' %}

{% block title %}My Account{% endblock %}
{% block admin %}
    <div id="theme-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-12">
                        <ol class="breadcrumb">
                            <li><a href="#">Home</a></li>
                            <li><a href="#">Users</a></li>
                            <li class="active"><span>User Profile</span></li>
                        </ol>
                        <h1>User Profile</h1>
                    </div>
                </div>
                <div class="row" id="user-profile">
                    <div class="col-lg-3 col-md-4 col-sm-4">
                        <div class="main-box clearfix">
                            <header class="main-box-header clearfix">
                                <h2> {{app.user.lastname|upper}} {{app.user.firstname|slice(0,1)|upper}}</h2>
                            </header>
                            <div class="main-box-body clearfix">
                                <img src="{{ app.user.avatar}}" alt="" class="profile-img img-fluid d-block mx-auto">
                                <div class="profile-label">
                                    <span class="badge badge-danger">
                                        {% for role in app.user.roles %}
                                            {% if role == 'ROLE_USER' %}
                                                User
                                            {% elseif role == 'ROLE_ADMIN' %}
                                                Admin
                                            {% endif %}
                                        {% endfor %}
                                    </span>
                                </div>
                                <div class="profile-since">
                                    Member since: {{app.user.createdAt | date('d/m/y')}}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-9 col-md-8 col-sm-8">
                        <div class="main-box clearfix">
                            <div class="tabs-wrapper profile-tabs">
                                <ul class="nav nav-tabs nav-fill">
                                    <li class="nav-item"><a class="nav-link active show" href="#tab-newsfeed" data-toggle="tab">MY PROFIL</a></li>
                                </ul>
                                <div class="tab-content">
                                    <div class="tab-pane fade in active show" id="tab-newsfeed">
                                        <div id="newsfeed">
                                            <div class="story">
                                                <div class="story-user">
                                                    <a href="#">
                                                        <img alt="" src="{{app.user.avatar}}"/>
                                                    </a>
                                                </div>
                                                <div class="story-content">
                                                    <header class="story-header">
                                                        <div class="story-author">
                                                            <a href="#" class="story-author-link">
                                                                {{app.user.lastname|upper}} {{app.user.firstname|slice(0,1)|upper}}
                                                            </a>
                                                        </div>
                                                    </header>
                                                    <div class="story-inner-content">
                                                        <div class="row">
                                                            <div class="col-lg-12">
                                                                <div class="row">
                                                                    <div class="col-lg-6">
                                                                        <div class="main-box">
                                                                            <header class="main-box-header clearfix">
                                                                                <h2>my contact details</h2>
                                                                            </header>
                                                                            <div class="main-box-body clearfix">
                                                                                <div class="form-group">
                                                                                    <label for="firstname">Firstname</label>
                                                                                    <input type="firstname" class="form-control" id="firstname" placeholder="Enter your Firstname" disabled value="{{app.user.firstname}}">
                                                                                </div>
                                                                                <div class="form-group">
                                                                                    <label for="lasttname">Lastname</label>
                                                                                    <input type="lastname" class="form-control" id="lasttname" placeholder="Enter your Lastname" disabled value="{{app.user.lastname}}">
                                                                                </div>
                                                                                <div class="form-group">
                                                                                    <label for="email">Email address</label>
                                                                                    <input type="email" class="form-control" id="email" placeholder="Enter your Email" disabled value="{{app.user.email}}">
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
