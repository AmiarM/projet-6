<form method="post" action="{{ path('app_image_delete', {'id': image.id}) }}" onsubmit="return confirm('Are you sure you want to delete this image?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ image.id) }}">
    <button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button>
</form>
