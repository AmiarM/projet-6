{% extends 'layout.html.twig' %}

{% block title %}Edit Categorie{% endblock %}

{% block admin %}
    <div class="row">
        <div class="col-lg-12">
            <div id="content-header" class="clearfix">
                <div class="float-left">
                    <ol class="breadcrumb">
                        <li><a href="{{path('app_admin')}}">Home</a></li>
                        <li class="active"><span>User</span></li>
                        <li class="active"><span>{{action}}</span></li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="main-box">
                <header class="main-box-header clearfix">
                    <h2>{{action}}</h2>
                </header>
                <div class="main-box-body clearfix">
                    {{form_start(form)}}
                    {{form_row(form.name)}}
                    {{form_row(form.submit)}}
                    {{form_end(form)}}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
