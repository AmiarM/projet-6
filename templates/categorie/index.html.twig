{% extends 'layout.html.twig' %}

{% block title %}Hello CategorysAdminController!{% endblock %}

{% block admin %}
    <div class="container mb-5">
        <div class="row">
            <div class="col-lg-12">
                <div id="content-header" class="clearfix">
                    <div class="float-left">
                        <ol class="breadcrumb">
                            <li><a href="#">Home</a></li>
                            <li class="active"><span>Categories</span></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="container mb-5">
                <div class="row">
                    {% for message in app.flashes('success') %}
                        <div class="col-lg-12 text-center">
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        </div>
                    {% endfor %}
                    {% if paginations|length ==0 %}
                        <div class="alert alert-danger" style="text-align: center;">
                            Aucune Catégorie en Base de Données
                        </div>
                    {% else %}
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="main-box clearfix">
                                    <header class="main-box-header clearfix">
                                        <h2>MANAGE CATEGORIE</h2>
                                        <div id="reportrange" class="float-right daterange-filter">
                                            <a href="{{path('app_categorie_add')}}" class="table-link">
                                                <span class="fa-stack">
                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                        <i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
                                                </span>
                                            </a>
                                        </div>
                                    </header>
                                    <div class="main-box-body clearfix">
                                        <div class="table-responsive">
                                            <table id="table-example" class="table table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>Name</th>
                                                        <th>ACTIONS</th>
                                                    </tr>
                                                </thead>
                                            <tbody>
                                                {% for categorie in paginations%}
                                                <tr>
                                                    <td>{{categorie.name}}</td>
                                                    <td>
                                                        <a href="{{ path('app_categorie_edit',{'id':categorie.id}) }}" class="table-link">
                                                            <span class="fa-stack">
                                                                <i class="fa fa-square fa-stack-2x"></i>
                                                                    <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                                            </span>
                                                        </a>
                                                        <a href="{{ path('app_categorie_delete',{'id':categorie.id}) }}" class="table-link danger">
                                                            <span class="fa-stack">
                                                                <i class="fa fa-square fa-stack-2x"></i>
                                                                    <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                                                            </span>
                                                        </a>
                                                    </td>
                                                </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                        <div class="navigation">
                                            {{ knp_pagination_render(paginations) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}
{% endblock %}
