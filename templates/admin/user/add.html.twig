{% extends 'layout.html.twig' %}

{% block title %}Register{% endblock %}
{% block stylesheet%}
    
{% endblock %}
{% block admin %}
    <div class="container-fluid">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div id="content-header" class="clearfix">
                        <div class="float-left">
                            <ol class="breadcrumb">
                                <li><a href="#">Home</a></li>
                                <li class="active"><span>{{action}}</span></li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="main-box">
                        <header class="main-box-header clearfix">
                            <h2>{{action}}</h2>
                        </header>
                        <div class="main-box-body clearfix">
                            {{form_start(form)}}
                                <div class="form-group">
                                    {{form_row(form.firstname)}}
                                </div>
                                <div class="form-group">
                                    {{form_row(form.lastname)}}
                                </div>
                                <div class="form-group">
                                    {{form_row(form.email)}}
                                </div>
                            {{form_end(form)}}
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <img src="{{asset('images/register.png')}}" alt="" width="600px" height="410px">
                <div>
            </div>
        </div>
    </div>
{% endblock %}
